{
  "meta": {
    "output_path": "assets/css/custom-callouts.css",
    "type": "css"
  },
  "sections": [
    {
      "selector": ".custom-callout",
      "variables": [
        { "name": "border-radius", "value": "10px" },
        { "name": "margin", "value": "1.5em 0" },
        { "name": "padding", "value": "10px" }
      ]
    },
    {
      "selector": ".custom-callout .callout-header",
      "variables": [
        { "name": "display", "value": "flex" },
        { "name": "opacity", "value": "1 !important" },
        { "name": "font-size", "value": "1.1rem !important" },
        { "name": "align-items", "value": "center" }
      ]
    },
    {
      "selector": ".custom-callout .callout-header::before",
      "variables": [
        { "name": "content", "value": "\"\"" },
        { "name": "display", "value": "inline-block" },
        { "name": "width", "value": "48px" },
        { "name": "height", "value": "48px" },
        { "name": "background-size", "value": "cover" },
        { "name": "background-repeat", "value": "no-repeat" },
        { "name": "background-position", "value": "center" },
        { "name": "border-radius", "value": "50%" }
      ]
    },
    {
      "selector": ".custom-callout.d-bugz",
      "variables": [
        { "name": "border-color", "value": "var(--shadow)" },
        { "name": "background-color", "value": "var(--nav-bg-050)" },
        { "name": "border", "value": "none !important" },
        { "name": "border-left", "value": "5px solid var(--blue-base) !important" },
        { "name": "box-shadow", "value": "none" },
        { "name": "outline", "value": "none" }
      ]
    },
    {
      "selector": ".custom-callout.d-bugz .callout-header::before",
      "variables": [
        { "name": "background-image", "value": "url(\"../images/d-bugz.png\")"
